<div class="container">
  <p id="notice"><%= notice %></p>

  <h1><%= I18n.t("menus.serviceList") %></h1>

  <table class="table table-bordered table-hover">
    <thead>
      <tr>
        <th><%= I18n.t("activerecord.attributes.service.id") %></th>    
        <th><%= I18n.t("activerecord.attributes.service.date") %></th>
        <th><%= I18n.t("activerecord.attributes.service.client") %></th>
        <th><%= I18n.t("activerecord.attributes.service.technician") %></th>
        <th colspan="3"><%=I18n.t("menus.options")%></th>
      </tr>
    </thead>

    <tbody>
      <% @services.each do |service| %>
        <tr>
          <td><%= service.id %></td>
          <td><%= service.date.strftime("%d/%m/%Y") %></td>
          <td><%= service.client.compname %></td>
          <td><%= service.technician.name %></td>
          <td align="center"><button class="btn btn-default btn-xs" type="button"><%= link_to I18n.t("links.show"), service %></button> 
          <button class="btn btn-default btn-xs" type="button"><%= link_to I18n.t("links.edit"), edit_service_path(service) %></button> 
          <button class="btn btn-default btn-xs" type="button"><%= link_to I18n.t("links.destroy"), service, method: :delete, data: { confirm: 'Are you sure?' } %></button></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <button class="btn btn-default" type="button"><%= link_to I18n.t("links.newService"), new_service_path %></button>
</div>
